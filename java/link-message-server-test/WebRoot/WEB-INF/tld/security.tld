<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE taglib
  PUBLIC "-//Sun Microsystems, Inc.//DTD JSP Tag Library 1.2//EN"
  "http://java.sun.com/dtd/web-jsptaglibrary_1_2.dtd">

<taglib>
    <tlib-version>1.0</tlib-version>
    <jsp-version>2.0</jsp-version>
    <short-name>Bingosoft Security</short-name>
    <uri>http://www.bingosoft.net/security.tld</uri>

    <tag>
        <name>isAllow</name>
        <tag-class>bingo.security.tag.IsAllowTag</tag-class>
        <body-content>JSP</body-content>
        <description>判断是否拥有权限 </description>
        <attribute>
            <name>privilege</name>
            <required>true</required>
            <rtexprvalue>true</rtexprvalue>
        </attribute>
    </tag>
    
    <tag>
        <name>isDeny</name>
        <tag-class>bingo.security.tag.IsDenyTag</tag-class>
        <body-content>JSP</body-content>
        <description>判断是否拒绝某个权限 </description>
        <attribute>
            <name>privilege</name>
            <required>true</required>
            <rtexprvalue>true</rtexprvalue>
        </attribute>
    </tag> 
</taglib>